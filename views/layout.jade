    title= title
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    link(rel='stylesheet', href='/stylesheets/style.css')
    link(rel='stylesheet', href='/stylesheets/bootstrap.css')
    
    //templates used in client side rendering
    script(type='text/template')#user-template
      div.row
        div.span2
          span <%= name %>
          span (<%= id %>)
        div.span
        a(href='#FIXME').delete-user-link Delete User

