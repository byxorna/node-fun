      div.navbar-inner
        div.container
          a.brand(href='#') Test Project
          ul.nav
            li
              a(href='#test') Hello
            li.dropdown
              a.dropdown-toggle(href='#',data-toggle='dropdown') Users
                b.caret
              ul.dropdown-menu
                li
                  a(href='#refresh-users') Refresh
                li
                  a(href='#add-user') Add

